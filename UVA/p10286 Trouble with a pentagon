#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    double lsq;
    double lpt;
    const double PI=4*atan(1.0);
    double sq=sin(108.0*PI/180.0);
    double sp=sin(63.0*PI/180.0);
    while(cin>>lpt)
    {
        lsq=(lpt*sq)/sp;
        printf("%.10lf", lsq);
        cout<<endl;
    }
    return 0;
}
